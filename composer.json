{
  "name": "dave-liddament/php-language-extensions-phpstan-demo",
  "description": "Demo of PHP language extensions using PHPStan to validate",
  "type": "project",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "DaveLiddament\\PhpLanguageExtensionsPhpstanDemo\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Dave Liddament",
      "email": "dave@lampbristol.com"
    }
  ],
  "require-dev": {
    "phpstan/phpstan": "^1.5",
    "phpstan/extension-installer": "^1.1",
    "phpunit/phpunit": "^9",
    "phpstan/phpstan-phpunit": "^1.1",
    "dave-liddament/phpstan-php-language-extensions": "^0.1.0"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "require": {
    "dave-liddament/php-language-extensions": "^0.1.0"
  }
}
